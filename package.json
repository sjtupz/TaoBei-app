{
  "name": "taobei-app",
  "version": "1.0.0",
  "description": "淘贝电商应用 - 完整的前后端项目",
  "private": true,
  "workspaces": [
    "src/backend",
    "src/frontend"
  ],
  "scripts": {
    "install:backend": "cd src/backend && npm install",
    "install:frontend": "cd src/frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "start:backend": "cd src/backend && node server.js",
    "start:frontend": "cd src/frontend && npm run dev",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev:backend": "cd src/backend && nodemon server.js",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd src/frontend && npm run build",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "test": "cd src/backend && npm test && cd ../frontend && npm test",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["taobei", "ecommerce", "react", "nodejs", "express"],
  "author": "Taobei Team",
  "license": "MIT"
}